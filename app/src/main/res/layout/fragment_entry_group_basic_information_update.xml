<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="筛选编号"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_input_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入筛选编号"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_select_research_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="研究中心"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_select_research_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:hint="请选择研究中心"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/iv_select_research_center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_arrow_right"/>

                    <android.support.v4.widget.Space
                        android:id="@+id/sp_select_research_center"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="受试者编号"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_subjects_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入受试者编号"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <CheckBox
                        android:id="@+id/cb_is_same"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:drawablePadding="6dp"
                        android:text="同筛选编号"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="姓名缩写"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_initials"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入姓名缩写"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="联系方式"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入联系方式"
                        android:inputType="number"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="基线类型"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_baseline_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:hint="请选择基线类型"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_baseline_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="基线日期"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_baseline_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="请选择日期"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:src="@mipmap/icon_visit_date_black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_test_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="试验分组"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_test_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:hint="请选择试验分组"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/iv_test_group"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_arrow_right"/>

                    <android.support.v4.widget.Space
                        android:id="@+id/space"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="top"
                    android:hint="请输入备注信息"
                    android:minHeight="80dp"
                    android:padding="15dp"
                    android:textColor="@color/color_464c5b"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="15sp"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>