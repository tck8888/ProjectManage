<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f3f3f3"
    >

    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="登  录"
        android:textColor="@color/color_464c5b"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/et_token"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corner_25dp_solid_fff_border_1abc9c"
        android:hint="请填写测试ID"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:textColor="@color/color_464c5b"
        android:textColorHint="@color/color_cccccc"
        android:textSize="@dimen/dimen_16sp"/>

    <Button
        android:id="@+id/btn_login_project_system"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_corner_25dp_solid_1abc9c"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="进入项目管理系统"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dimen_16sp"/>
</RelativeLayout>