<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_f3f3f3"
              android:minHeight="94dp"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2017年12月10日"
            android:textColor="@color/color_657180"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="任务清单"
            android:textColor="@color/color_657180"
            android:textSize="14sp"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/cb_is_same"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:drawablePadding="6dp"
            android:text="仅查看未完成任务"
            android:textColor="@color/color_657180"
            android:textSize="14sp"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:background="@color/color_ffffff"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/color_1abc9c"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/color_1abc9c"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_464c5b"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>