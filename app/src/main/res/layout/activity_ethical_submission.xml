<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f3f3f3"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_arrow_left_black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:src="@mipmap/arrow_left_black"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="伦理递交"
            android:textColor="@color/color_464c5b"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_check_mark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:padding="15dp"
            android:src="@mipmap/icon_check_mark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:background="@color/color_e4e4e4"/>
    </FrameLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="项目名称"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="复旦大学附属肿瘤医院"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_center_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="中心名称"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_center_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择中心名称"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_arrow_right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_doc_receive_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="接受文件日期"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_doc_receive_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择接受文件日期"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_visit_date_black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_pi_submit_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="递交PI日期"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_pi_submit_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择递交PI日期"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_visit_date_black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_pi_sign_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="PI签字日期"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_pi_sign_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择PI签字日期"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_visit_date_black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_ec_submit_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="递交EC日期"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_ec_submit_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择递交EC日期"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_visit_date_black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_ec_approve_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="获取批件日期"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_ec_approve_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择获取批件日期"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_visit_date_black"/>
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:id="@+id/ll_documents_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="递交材料名称"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_documents_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择递交材料名称"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_arrow_right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp"
                    android:text="伦理递交当前进度"
                    android:textColor="@color/color_464c5b"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <com.healthmudi.commonlibrary.widget.AutoListView
                    android:id="@+id/auto_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_f8f8f8"
                    android:divider="@color/color_e4e4e4"
                    android:dividerHeight="0.5dp"
                    android:paddingLeft="28dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_job_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="完成PI签字任务用时(小时)"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_job_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择用时"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_arrow_right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_e4e4e4"/>

                <LinearLayout
                    android:id="@+id/ll_job_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:minHeight="50dp"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="完成EC批件任务用时(小时)"
                        android:textColor="@color/color_464c5b"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_job_time2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择用时"
                        android:maxLines="1"
                        android:textColor="@color/color_464c5b"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@mipmap/icon_arrow_right"/>
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:gravity="top"
                    android:hint="请输入备注信息"
                    android:minHeight="80dp"
                    android:padding="15dp"
                    android:textColor="@color/color_464c5b"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="15sp"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>