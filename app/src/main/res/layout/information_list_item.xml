<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:background="#fff"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_image_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_image_type"
        android:text="系统消息"
        android:textColor="@color/color_464c5b"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:text="今天09:00"
        android:textColor="@color/color_464c5b"
        android:textSize="16sp"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_text_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_image_type"
        android:text="系统消息系统消息系统消息系统消息系统消息系统消息系统消息"
        android:textColor="@color/color_464c5b"
        android:textSize="14sp"/>
</RelativeLayout>