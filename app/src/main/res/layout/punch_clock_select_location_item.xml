<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="13.5dp"
                android:paddingTop="11dp">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_hospital_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_464c5b"
            android:textSize="@dimen/dimen_16sp"
            tools:text="复旦大学附属中山医院"/>

        <TextView
            android:id="@+id/tv_sign_hospital_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            tools:text="上海市中山医院"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sign_hospital_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_layout"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dimen_12sp"
        tools:text="上海市上海市徐汇区枫林路180号"/>

    <ImageView
        android:id="@+id/iv_state_selected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@mipmap/icon_check_mark_green"
        android:visibility="gone"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_below="@id/tv_sign_hospital_location"/>
</RelativeLayout>